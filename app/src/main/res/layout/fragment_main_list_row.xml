<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/row_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_row_height">

        <ImageView
            android:id="@+id/element_image"
            android:layout_width="@dimen/list_row_image_width"
            android:layout_height="@dimen/list_row_image_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/list_row_image_margin_left" />

        <TextView
            android:id="@+id/list_row_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/list_row_title_margin_left"
            android:fontFamily="sans-serif-medium"
            android:text="TytuÅ‚"
            android:textSize="@dimen/title_font_size" />

    </RelativeLayout>

</LinearLayout>